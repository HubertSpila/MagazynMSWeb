@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@using WarehouseManagmentWEB.Controllers
@using WarehouseManagmentWEB.Tools
@using WarehouseManagmentWEB.Tools.Api;

@model WarehouseManagmentWEB.Pages.Shared.CartonsModel
@{
    ViewBag.Title = "MainPage";
    Layout = "_Layout_Cartons";

    var cartons = Cartons.GetCartons();
}



<html>
<head>
    <title>MotorcycleScreens Menager</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

    <style>
        a {
            text-align: center;
            display: table-cell;
            vertical-align: middle;
        }

        li {
            padding: 10px;
        }

        body {
            background-image: url('/images/motorcycle.jpg');
            margin: 0;
            font-size: 30px;
            color: black;
        }

    </style>
</head>
<body>
    @if (cartons != null)
    {
        foreach (var item in cartons)
        {
            <li>@item.ID_kartonu @item.Wysokosc @item.Szerokosc @item.Glebokosc @item.Stan_magazynowy @item.Potrzebna_ilosc</li>

        }
    }
</body>
</html>