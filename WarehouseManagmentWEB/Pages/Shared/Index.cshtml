@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@using WarehouseManagmentWEB.Controllers
@using WarehouseManagmentWEB.Tools
@using WarehouseManagmentWEB.Tools.Api;
@model IndexModel
@{
    ViewBag.Title = "Login";


}
<head>
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, Helvetica, sans-serif;
            background-color: #D0D9F6;
            background-size: cover;
        }

        input[type=text], input[type=password] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            box-sizing: border-box;
        }

        button {
            background-color:  #4e73df;;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
        }

            button:hover {
                opacity: 0.8;
            }


        .imgcontainer {
            text-align: center;
            margin: 24px 0 12px 0;
        }

        span.psw {
            float: right;
            padding-top: 16px;
        }

    </style>
</head>
<body>

    @using (Html.BeginForm("Index", "App", FormMethod.Post))
    {
        <div class="text-center">
            <form method="post">
                <label for="uname"><b>Username</b></label>
                <input type="text" placeholder="Enter Username" name="login" required>

                <label for="psw"><b>Password</b></label>
                <input type="password" placeholder="Enter Password" name="password" required>

                <button type="submit" asp-asp-page-handler="Submit">Zaloguj</button>
            </form>
            <label>
                <input type="checkbox" checked="checked" name="remember"> Remember me
            </label>
        </div>
    }
</body>
