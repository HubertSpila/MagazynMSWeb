@page
@model IndexModel
@{
    ViewData["Title"] = "Warehouse Management";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    @*<title>@ViewData["Title"] - WarehouseManagmentWEB</title>*@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WarehouseManagmentWEB.styles.css" asp-append-version="true" />

    <style>
        body {
            background-color: #D0D9F6;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: #4e73df;
            color: #fff;
        }

        nav {
            background-color: #4e73df;
            color: #fff;
            width: 260px;
            height: 100%;
            position: fixed;
            top: 0;
            left: 0;
            overflow-x: hidden;
            padding-top: 20px;
            padding: 30px;
        }

            nav ul {
                list-style: none;
                margin: 0;
                padding: 0;
                display: flex;
                flex-direction: column;
            }

            nav li {
                margin-bottom: 20px;
            }

            nav a {
                color: #fff;
                text-decoration: none;
                font-weight: bold;
                font-size: 1.2rem;
            }

        .tiles {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            margin: 50px;
        }

        .tile {
            background-color: #A4B7EF;
            width: calc(50% - 20px);
            padding: 20px;
            margin-bottom: 20px;
            text-align: center;
            text-decoration: none;
            color: #333;
        }

            .tile:hover {
                background-color: #fff;
            }

            .tile h2 {
                margin: 0;
                font-size: 1.5rem;
                font-weight: bold;
            }

        footer {
            text-align: center;
            margin-top: 50px;
            padding: 20px;
            background-color: #eee;
            background-color: #A4B7EF;
        }

        .logout {
            margin-right: 20px;
        }

        .options {
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }

            .options a {
                color: #4e73df;
                margin-right: 20px;
            }

        button {
            position: fixed;
            bottom: 0;
            margin: 15px;
            color: #4e73df;
        }

            button:hover {
                background-color: #2b6cb0;
                color: white;
            }



        img {
            float: center;
            justify-content: center;
        }
    </style>
</head>

<meta charset="UTF-8">

<header>
    <nav>
        <img src="~/images/logo.png" alt="logo" width="120px" height="120px" />
        <ul>
            <li></li>
            <li><a asp-area="" asp-page="/Shared/MainPage"><img src="~/images/mainpage1.png" alt="mainpage" width="35px" height="35px" />   Panel główny</a></li>
            <li><a asp-area="" asp-page="/Shared/Products"><img src="~/images/product1.png" alt="product" width="35px" height="35px" />   Produkty</a></li>
            <li><a asp-area="" asp-page="/Shared/Orders"><img src="~/images/orders1.png" alt="ordes" width="35px" height="35px" />   Zamówienia</a></li>
            <li><a asp-area="" asp-page="/Shared/Cartons"><img src="~/images/cartons1.png" alt="cartons" width="35px" height="35px" />   Kartony</a></li>
            <li><a asp-area="" asp-page="/Shared/Warehouse"><img src="~/images/logistics.png" alt="stats" width="35px" height="35px" />   Magazyn</a></li>
            <li><a asp-area="" asp-page="/Shared/Settings"><img src="~/images/options1.png" alt="options" width="35px" height="35px" />   Zarządzaj</a></li>
            <li></li>
            <li></li>
            <li><a asp-area="" asp-page="/Shared/Index"><img src="~/images/logout1.png" alt="logout" width="35px" height="35px" />   Wyloguj</a></li>
            @*<button id="wylogowanie"><a asp-controller="App" asp-action="Index">Wyloguj</a> </button>*@

        </ul>
    </nav>    <div>
    </div>
</header>

<!-- Treść strony -->
<main>
    <div class="tiles">
        <a class="tile" asp-area="" asp-page="/Shared/Products">
            <h2>Produkty</h2>
        </a>
        <a class="tile" asp-area="" asp-page="/Shared/Orders">
            <h2>Zamówienia</h2>
        </a>
        <a class="tile" asp-area="" asp-page="/Shared/Cartons">
            <h2>Kartony</h2>
        </a>
        <a class="tile" asp-area="" asp-page="/Shared/Warehouse">
            <h2>Magazyn</h2>
        </a>
    </div>
</main>

<!-- Stopka strony -->
<footer>
    <p>Strona wykonana przy użyciu technologii Razor Pages</p>
</footer>

</html>
