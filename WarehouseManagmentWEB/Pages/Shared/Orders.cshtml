@page
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers
@using WarehouseManagmentWEB.Controllers
@using WarehouseManagmentWEB.Tools
@using WarehouseManagmentWEB.Tools.Api;

@model WarehouseManagmentWEB.Pages.Shared.OrdersModel
@{
    ViewBag.Title = "Warehouse Management";

    var cartons = Cartons.GetCartons();


    bool first = true;

    string SetFirst(bool f)
    {
        first = f;
        return string.Empty;
    }
}


<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta charset="utf-8" />
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/WarehouseManagmentWEB.styles.css" asp-append-version="true" />

<html>
<head>
    <title>MotorcycleScreens Menager</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">

    <style>
        body {
            background-color: #D0D9F6;
        }

        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 20px;
            background-color: #4e73df;
            color: #fff;
        }

        nav {
            background-color: #4e73df;
            color: #fff;
            width: 200px;
            height: 100%;
            position: fixed;
            top: 0;
            left: 0;
            overflow-x: hidden;
            padding-top: 20px;
            padding: 30px;
        }

            nav ul {
                list-style: none;
                margin: 0;
                padding: 0;
                display: flex;
                flex-direction: column;
            }

            nav li {
                margin-bottom: 20px;
            }

            nav a {
                color: #fff;
                text-decoration: none;
                font-weight: bold;
                font-size: 1.2rem;
            }

        .tiles {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            margin: 50px;
        }

        .tile {
            background-color: #eee;
            width: calc(50% - 20px);
            padding: 20px;
            margin-bottom: 20px;
            text-align: center;
            text-decoration: none;
            color: #333;
        }

            .tile:hover {
                background-color: #ccc;
            }

            .tile h2 {
                margin: 0;
                font-size: 1.5rem;
                font-weight: bold;
            }

        footer {
            text-align: center;
            margin-top: 50px;
            padding: 20px;
            background-color: #eee;
            background-color: #A4B7EF;
        }

        .logout {
            margin-right: 20px;
        }

        .options {
            display: flex;
            justify-content: flex-end;
            align-items: center;
        }

            .options a {
                color: #4e73df;
                margin-right: 20px;
            }

        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 70%;
            margin: 15px;
        }

        td, th {
            border: 1px solid #4E73DF;
            text-align: center;
        }

        tr:nth-child(even) {
            background-color: #839DE9;
        }

        #textField {
            background: transparent;
        }

        body {
            background-color: #D0D9F6;
            background-size: cover;
            margin: 0;
            font-size: 20px;
            color: black;
        }

        table {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            border-collapse: collapse;
            width: 100%;
            margin: 15px 0;
            background-color: #fff;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        }

        td, th {
            border: 1px solid #ddd;
            text-align: center;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        th {
            background-color: #4E73DF;
            color: #fff;
        }

        #textField {
            background-color: #f2f2f2;
            border: none;
            padding: 5px;
        }

    </style>
    <script>
        function f(id) {
            var labelId = "input_" + id;
            const ilosc = document.getElementById(labelId).value;
            document.getElementById("a").innerHTML = ilosc;


        }
    </script>
</head>
<header>
    <p><a asp-controller="App" asp-action="OrdersImport">Pobierz zamówienia</a></p>
    <nav>
        <img src="~/images/logo.png" alt="logo" width="120px" height="120px" />
        <ul>
            <li></li>
            <li><a asp-area="" asp-page="/Shared/MainPage">Strona główna</a></li>
            <li><a asp-area="" asp-page="/Shared/Products">Produkty</a></li>
            <li><a asp-area="" asp-page="/Shared/Orders">Zamówienia</a></li>
            <li><a asp-area="" asp-page="/Shared/Cartons">Kartony</a></li>
            <li><a asp-area="" asp-page="/Shared/Stats">Statystyki</a></li>
            <li><a asp-area="" asp-page="/Shared/Settings">Zarządzaj</a></li>
            <li></li>
            <li></li>
            <li><a asp-area="" asp-page="/Shared/Index">Wyloguj</a></li>
    </nav>
    <div>
    </div>
</header>
<body>
    <table>
        <tr>
            <th><a asp-controller="Sort" asp-action="SortOrders1">ID_zamowienia</a></th>
            <th><a asp-controller="Sort" asp-action="SortOrders2">Karton</a></th>
            <th><a asp-controller="Sort" asp-action="SortOrders3">Karton2</a></th>
            <th><a asp-controller="Sort" asp-action="SortOrders4">czy_karton_na_stanie</a></th>
            <th><a asp-controller="Sort" asp-action="SortOrders5">sku</a></th>
            <th><a asp-controller="Sort" asp-action="SortOrders6">ilosc</a></th>
            <th><a asp-controller="Sort" asp-action="SortOrders7">czy_na_stanie</a></th>
        </tr>
        @if (Model != null && Model.OrdersList != null)
        {
            @foreach (var order in Model.OrdersList)
            {
                @SetFirst(true)
                ;

                @foreach (var item in order.pozycje)
                {
                    <tr>
                        @if (@first)
                        {
                            <td>@order.iD_zamowienia</td>
                            <td>
                                @using (Html.BeginForm("EntryCarton", "App", FormMethod.Post))
                                {
                                    <form method="post">
                                        <input style="visibility: collapse;" type="text" name="id_zamowienia" value="@item.iD_zamowienia" width="0" height="0" required>

                                        <select id="selectField" name="id_kartonu" required>
                                            <option value=0 selected>Wybierz karton</option>
                                            @foreach (var carton in cartons)
                                            {
                                                @if (@carton.ID_kartonu == order.iD_kartonu)
                                                {
                                                    <option value=@carton.ID_kartonu selected>@carton.Wysokosc x @carton.Szerokosc x @carton.Glebokosc</option>
                                                }
                                                else
                                                {
                                                    <option value=@carton.ID_kartonu>@carton.Wysokosc x @carton.Szerokosc x @carton.Glebokosc</option>
                                                }
                                            }
                                        </select>

                                        <button type="submit" asp-asp-page-handler="Submit">Zmień</button>
                                    </form>
                                }
                            </td>
                            <td> @order.ZwrocKarton2()</td>
                            <td> @order.czy_na_stanie</td>

                            @SetFirst(false)
                            ;
                        }
                        else
                        {
                            <td></td>
                            <td></td>
                            <td></td>
                            <td></td>
                        }

                        <td>@item.sku    </td>
                        <td>@item.ilosc    </td>
                        <td>@item.czy_na_stanie</td>
                    </tr>
                }
            }
        }

    </table>

    <footer>
        <p>Strona wykonana przy użyciu technologii Razor Pages</p>
    </footer>
</body>
</html>
